            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('student_id', jsonData.user_id);",
                  "    pm.environment.set('access_token', jsonData.access_token);",
                  "    if (jsonData.faculty) {",
                  "        pm.environment.set('faculty_id', jsonData.faculty.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"teststudent\",\n    \"email\": \"teststudent@example.com\",\n    \"password\": \"test123\",\n    \"first_name\": \"Test\",\n    \"last_name\": \"Student\",\n    \"faculty_id\": 1\n}"
            },
